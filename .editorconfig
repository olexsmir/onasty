root = true

[*]
indent_style = space
indent_size = 4
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true
charset = utf-8

[*.go]
indent_style = tab
indent_size = 4
trim_trailing_whitespace = true

[web/**/*.elm]
indent_style = space
indent_size = 4
trim_trailing_whitespace = true

[*.{md,yml,yaml}]
indent_size = 2
trim_trailing_whitespace = false
